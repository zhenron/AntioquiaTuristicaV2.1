<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/LayoutExterior"
        tools:context="com.example.juliancamilomunoz.antioquiaturisticav21.Pizza">

        <TextView
            android:text="@string/konos"
            style="@style/ActivityTitleStyle"/>

        <ImageView
            android:layout_width="330dp"
            android:layout_height="220dp"
            android:scaleType="fitXY"
            android:src="@drawable/konosf"/>

        <LinearLayout
            style="@style/PlaceDescription">

            <TextView
                android:text="@string/tipo"
                android:textColor="@color/midnightblue"
                style="@style/TextViewNameStyle"/>

            <TextView
                android:text="@string/res_bar"
                style="@style/TextViewNameStyle"/>

        </LinearLayout>

        <LinearLayout
            style="@style/PlaceDescription">

            <TextView
                android:text="@string/dir"
                android:textColor="@color/midnightblue"
                style="@style/TextViewNameStyle"/>

            <TextView
                android:text="@string/konosdir"
                style="@style/TextViewNameStyle"/>

        </LinearLayout>

        <LinearLayout
            style="@style/PlaceDescription">

            <TextView
                android:text="@string/tel"
                android:textColor="@color/midnightblue"
                style="@style/TextViewNameStyle"/>

            <TextView
                android:text="@string/konostel"
                style="@style/TextViewNameStyle"/>

        </LinearLayout>

        <LinearLayout
            style="@style/PlaceDescription">

            <TextView
                android:text="@string/horario"
                android:textColor="@color/midnightblue"
                style="@style/TextViewNameStyle"/>

            <TextView
                android:text="@string/konoshor"
                style="@style/TextViewNameStyle"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
